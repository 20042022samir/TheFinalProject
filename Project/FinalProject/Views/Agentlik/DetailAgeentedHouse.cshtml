<link rel="stylesheet" href="~/Assets/CSS/Detail.css">
<link rel="stylesheet" href="~/Assets/CSS/DetailCarousel.css">
<script src="https://kit.fontawesome.com/ea89281bc3.js" crossorigin="anonymous"></script>
@model AgentedHouse
<style>
    img {
        margin: 0;
    }

    media screen and (max-width: 1190px)
    #section2Container img {
        width: 100%;
    }
</style>

<h1 style="text-align:center;">@Model.Agent.FullName</h1>

<!--section 1-->
<section id="section1">
    <div id="section1Container">
        <div id="section1ContainerLeft">
            <div id="ccarouselll">
                <input type="radio" id="image1" name="image" checked>
                <input type="radio" id="image2" name="image">
                <input type="radio" id="image3" name="image">

                <div class="container">
                    <div class="featured-wrapper">
                        <ul class="featured-list" style="padding-left:0px;">
                            @foreach (var item in Model.Images)
                            {
                                <li>
                                    <figure>
                                        <img src="~/Assets/Images/@item.Image" alt="">
                                    </figure>
                                </li>
                            }
                        </ul>
                        <ul class="arrows" style="padding-left:0px;">
                            <li>
                                <label for="image1"></label>
                            </li>
                            <li>
                                <label for="image2"></label>
                            </li>
                            <li>
                                <label for="image3"></label>
                            </li>
                        </ul>
                        <ul class="dots" style="padding-left:0px;">
                            <li>
                                <label for="image1"></label>
                            </li>
                            <li>
                                <label for="image2"></label>
                            </li>
                            <li>
                                <label for="image3"></label>
                            </li>
                        </ul>
                    </div>
                    <ul class="thumb-list" style="padding-left:0px;">
                        @foreach (var item in Model.Images)
                        {
                            <li>
                                <label for="image3">
                                    <img src="~/Assets/Images/@item.Image" alt="">
                                    <span class="outer">
                                    </span>
                                </label>
                            </li>

                        }
                    </ul>
                </div>
            </div>
            <div style="display: flex;flex-direction: column;row-gap: 20px;padding-top: 20px;align-items: center ;">
                <h1 style="color: black;">@Model.Adrees</h1>
            </div>
        </div>
        <div id="section1ContainerRight">
            <div id="priceDetail">
                <p>N @Model.Id</p>
                <p>Qiymet---> @Model.Price:AY</p>
            </div>
            <div id="detailInfo" style="text-align: center;">
                <p><span style="color: coral;">tarix</span> :@Model.CreatedDate.Day- @Model.CreatedDate.Month- @Model.CreatedDate.Year</p>
                <p><span style="color: coral;">Baxis</span> :2034</p>
                <p><span style="color: coral;">Otaq Sayi</span> :31</p>
                <p><span style="color: coral;">Sahe</span> : 123</p>
                <p><span style="color: coral;">Seher</span> :@Model.Adrees</p>
            </div>
        </div>
    </div>
</section>


