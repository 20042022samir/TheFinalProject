@model RegisterViewModel
<script src="https://kit.fontawesome.com/ea89281bc3.js" crossorigin="anonymous"></script>

<section class="h-100 h-custom" style="background-color: #8fc4b7;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-8 col-xl-6">
                <div class="card rounded-3">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img3.webp"
                         class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
                         alt="Sample photo">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Qeydiyyatdan Kecin</h3>

                        <form class="px-md-2" asp-controller="account" asp-action="register" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" style="color:red;"></div>

                              <div class="form-outline mb-4">
                                <input type="text" id="form3Example1q" class="form-control" asp-for="Name" />
                                <label class="form-label" for="form3Example1q">Ad</label>
                            </div>


                            <div class="form-outline mb-4">
                                <input type="text" id="form3Example1q" class="form-control" asp-for="Surname" />
                                <label class="form-label" for="form3Example1q">Soyad</label>
                            </div>


                            <div class="form-outline mb-4">
                                <input type="text" id="form3Example1q" class="form-control" asp-for="UserName" />
                                <label class="form-label" for="form3Example1q">Istifadeci Adi</label>
                            </div>

                              <div class="form-outline mb-4">
                                <input  id="form3Example1q" class="form-control" asp-for="Email" />
                                <label class="form-label" for="form3Example1q">Email</label>
                            </div>

                                  <div class="form-outline mb-4">
                                  <div style="display:flex;flex-direction:row; column-gap:5px;">
                                    <input id="form3Example1q"  asp-for="file" />

                                  </div>
                                <label class="form-label" for="form3Example1q">Profile Sekli</label>
                            </div>

                              <div class="form-outline mb-4">
                                  <div style="display:flex;flex-direction:row; column-gap:5px;">
                                    <input id="form3Example1q" class="passwordInput" asp-for="Password" />
                                    <button class="showPasswordBtn" style="border:none;background-color:transparent;"><i class="fa-solid fa-eye"></i></button>
                                  </div>
                                <label class="form-label" for="form3Example1q">Parol</label>
                            </div>



                              <div class="form-outline mb-4">
                                <div style="display:flex;flex-direction:row; column-gap:5px;">
                                <input  id="form3Example1q" class="passwordInput" asp-for="ConfirmPassword" />
                                    <button class="showPasswordBtn" style="border:none;background-color:transparent;"><i class="fa-solid fa-eye"></i></button>

                                  </div>
                                <label class="form-label" for="form3Example1q">Parol Birdaha</label>
                            </div>
                            <div style="display:flex;column-gap:10px;">
                                <p>Hesabiniz var?</p>
                                <a style="text-decoration:none;" asp-controller="account" asp-action="login">Daxil olun</a>
                            </div>

                            <button type="submit" class="btn btn-success btn-lg mb-1">Qeydiyyatdan Kecin</button>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .passwordInput{
        width:100%;
        height:37.6px;
        padding-left:10px;
        border-radius:10px;
        border-color: 767676;
    }
</style>

<script>
    const showPasswordBtns = document.getElementsByClassName("showPasswordBtn");
    const passwordInputs = document.getElementsByClassName("passwordInput");
    for(let i=0;i<showPasswordBtns.length;i++){
        showPasswordBtns[i].addEventListener("click",(event)=>{
            event.preventDefault()
            if(passwordInputs[i].type=='password'){
                passwordInputs[i].type='text'
            }else {
                passwordInputs[i].type='password'
            }
        })
    }
</script>

