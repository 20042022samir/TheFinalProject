@model IEnumerable<Message>

@if(Model.Count()==0){
	<!--secion 1-->
	<section id="section1" style="margin:100px 0px;">
		<div id="section1Container">
	<h1 style="color:red;text-align:center;">sizin hele ki hec bir mesajiniz yoxdur</h1>
	<img src="~/Assets/Images/nomessage.webp" />
</div>
	</section>
}else{
	<section id="section1" style="margin:130px 0px;" >
		<div id="section1Container">
			@{
				int count = 0;
			}
	@foreach (var item in Model)
			{
				count++;
				@if (item.ForDelete)
				{				
				<div style="border:3px solid black;padding:20px;">
			<h2 style="color:red;text-align:center;">@count</h2>
						<a asp-controller="house" asp-action="deletemessage" asp-route-messageId="@item.Id" style="text-decoration:none;color:red;"><i class="fa-solid fa-trash"></i></a>
						<p><span style="color:blue">@item.CreatedDate.Day:@item.CreatedDate.Month:@item.CreatedDate.Year</span> tarixinde sizin elaniniz bizim heyet terefinden silinmisdir</p>
			<p>Sebebi :@item.Description</p>
		</div>
				}
				@if (item.ForAnswer)
				{
					<div style="border:3px solid black;padding:20px;">
						<h2 style="color:red;text-align:center;">@count</h2>
						<a asp-controller="house" asp-action="deletemessage" asp-route-messageId="@item.Id" style="text-decoration:none;color:red;"><i class="fa-solid fa-trash"></i></a>
						<p><span style="color:blue">@item.CreatedDate.Day:@item.CreatedDate.Month:@item.CreatedDate.Year</span> tarixinde yazdiginiz muracietiniz heyetimiz terefinden cavablanmsdir :)</p>
						<p>Cavab :@item.Description</p>
					</div>
				}
			}
		</div>
	</section>
}