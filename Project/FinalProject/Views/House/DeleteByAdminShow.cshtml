			<h4>Soyad :@Model.AppUser.Surname </h4>
		</div>
		<form method="post" asp-controller="house" asp-action="deletebyadmin" asp-route-id="@Model.Id" >
			<div style="display:flex;flex-direction:column;justify-content:center;align-items:center;row-gap:10px;" >
			<h2>Silmeyin sebebi</h2>
			<p style="color:red;">bu sebebler istifadeciye bildirilecek</p>
		   <input type="text" placeholder="silmenin sebebini qeyd edin.." name="description" />
		   <button type="submit" style="padding:5px 8px;background-color:black;color:white;">Tesdiq Et</button>
			</div>
		</form>

	</div>
</section>
