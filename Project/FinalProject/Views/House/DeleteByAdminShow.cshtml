@model House

<style>
	input{
		width:400px;
		height:40px;
		border-radius:6px;
		padding-left:10px;
	}
</style>

<!--section 1-->
<section accesskey="id=section1" style="margin:100px 0px;">
	<div id="section1Container">
		<div>
			<h2 style="color:red;">Elan Sahibinin melumatlari</h2>
			<img src="~/Assets/Images/@Model.AppUser.Image"  style="width:300px;"/>
