@if (!User.Identity.IsAuthenticated)
{
<!--section 1-->
<section id="section1">
    <h1 style="text-align: center;">Sikayet ve Tekliflerinizi gonderin 😊</h1>
    <div id="section1Container">
        <form method="post"  asp-controller="home" asp-action="muraciet" >
            <!-- Name input -->
            <div class="form-outline mb-4">
                <input asp-for="Name" type="text" id="form4Example1" class="form-control" />
                <label class="form-label" for="form4Example1">Adiniz</label>
            </div>

            <!-- Surname input -->
            <div class="form-outline mb-4">
                <input asp-for="Surname" type="text" id="form4Example2" class="form-control" />
                <label class="form-label" for="form4Example2">Soyadiniz</label>
            </div>

         <!-- Email input -->
            <div class="form-outline mb-4">
                <input asp-for="Email" type="email" id="form4Example2" class="form-control" />
                <label class="form-label" for="form4Example2">Emailiniz</label>
            </div>


                <!-- Email input -->
                <div class="form-outline mb-4">
                    <input asp-for="Message" type="text" id="form4Example2" class="form-control" />
                    <label class="form-label" for="form4Example3">Sikyet Ve Teklifleriniz</label>
                </div>

            <!-- Submit button -->
            <button type="submit" style="width: 200px;height: 40px;border-radius: 10px;background-color: cadetblue;color: white;">Send</button>
        </form>
    </div>
</section>   
}
else
{
