@model Muraciet

 <style>
        #section1{
            margin: 80px 0px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        #section1Container{
           height: 400px;
           display: flex;
           justify-content: center;
           align-items: center;
        }
        #section1Container{
    height: 400;
        }
         form{
            width: 800px;
         }
         @@media screen and (max-width:1100px){
            form{
                width: 500px;
            }
         }
         @@media screen and (max-width:600px){
            form{
                width: 300px;
            }
         }
    </style>


<!--section 1-->
<section id="section1">
    <div style="display:flex;flex-direction:column;justify-content:center;align-items:center;">
        @if (Model.AppUser.Image != "")
        {
            <img src="~/Assets/Images/@Model.AppUser.Image" style="width:200px;" />
        }
        else
        {
            <img src="~/Assets/Images/UserImage.jpg" style="width:200px;" />
        }
        <h2><span style="color:red;">@Model.AppUser.UserName</span> adli istifadeciye cavab yazin</h2>
    </div>
    <div id="section1Container" style="height:auto;">
        <form method="post" asp-controller="home" asp-action="responsemuraciet">

            <h1>Muraciet :@Model.Message</h1>
            <!-- Message input -->
            <div class="form-outline mb-4">
                <textarea name="message" class="form-control" id="form4Example3" rows="4"></textarea>
                <label class="form-label" for="form4Example3">Messaginiz</label>
            </div>

        

            <!-- Submit button -->
            <button type="submit" style="width: 200px;height: 40px;border-radius: 10px;background-color: cadetblue;color: white;">Send</button>
        </form>
    </div>
</section>   