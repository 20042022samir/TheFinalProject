<link rel="stylesheet" href="~/Assets/CSS/DetailBlog.css">
<script src="https://kit.fontawesome.com/ea89281bc3.js" crossorigin="anonymous"></script>

@model Blog
<!--section 1-->
<section id="section1">
    <div id="section1Container">
        <div id="section1ContainerLeft">
            <div id="BlogDetailImage">
                <img src="~/Assets/Images/@Model.Image" />
            </div>
            <h1>
                @Model.Tittle
            </h1>
            <div id="blogDetailed">
                <p>
                   @Model.Description
                </p>
            </div>
        </div>
        <div id="section1ContainerRight">
            <div id="Watchedd">
                <h2>En Yeniler</h2>
                <hr>
                <div id="watchedList">
                    @foreach (var item in ViewBag.ExtraThree)
                    {
                                         <a asp-controller="blog" asp-action="detail" asp-route-id="@item.Id" style="text-decoration: none; color: black;">
                        <div class="mostWatched">
                                <h2>@item.Tittle</h2>
                                <p>Meta Company | @item.CreatedDate.Day .@item.CreatedDate.Month .@item.CreatedDate.Year |<i class="fa-solid fa-eye"></i> @item.ViewCount</p>
                            <hr>
                        </div>
                    </a>
   
                    }                    
                    <hr>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>