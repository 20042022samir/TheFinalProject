<link rel="stylesheet" href="./Assets/CSS/BlogMain.css">
<script src="https://kit.fontawesome.com/ea89281bc3.js" crossorigin="anonymous"></script>

@model PagginationViewModel<Blog>

<!--section 1-->
<section id="section1">
    <div id="section1Container">
        <div id="neew">
            <h2>En cox baxilanlar</h2>
        </div>
        <div id="section1ContainerDown">
            @foreach (var item in Model.Items)
            {
                            <a asp-controller="blog" asp-action="detail" asp-route-id="@item.Id" style="text-decoration: none;color: black;">
                    <div class="blog" style="border:2px solid black">
                    <div class="blogImageContainer" style="width:200px;">
                        <img src="~/Assets/Images/@item.Image" style="height:100%;"/>
                    </div>
                    <div class="blogInfo">
                        <h4>@item.Tittle</h4>
                        <p>@item.Description</p>
                        <p>@item.CompanyName | @item.CreatedDate.Day .@item.CreatedDate.Month .@item.CreatedDate.Year |<i class="fa-solid fa-eye"></i> @item.ViewCount </p>
                    </div>
                </div>
            </a>

            }


            <nav aria-label="Page navigation example">
                <ul class="pagination">

                     @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                                <div style="padding:5px 8px;background-color:black;color:white;margin:5px;">
                                <a style="color:white;text-decoration:none;" href="@Url.Action("Index", new { page = i, pageSize = Model.PageSize })">
                                    @i</a>
</div>
                                
                    }
                </ul>
            </nav>
        </div>
    </div>
</section>
