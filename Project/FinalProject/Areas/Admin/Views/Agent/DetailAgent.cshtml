<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/ea89281bc3.js" crossorigin="anonymous"></script>

@model Agent
<div style="display:flex;flex-direction:column;">

<h1>Agent @Model.FullName</h1>
    @if (Model.agentedHouses.Count() == 0)
    {
        <h1>This agent does not have any house!</h1>
    }
    else
    {
    <div style="display:flex;flex-direction:column;">
    <table class="table" style="width:500px; height:300px;">
        <thead class="table-dark">
            <tr>
                <th scope="col" style="height:40px;">Id</th>
                <th scope="col" style="height:40px;">Full Name</th>
                <th scope="col" style="height:40px;">Price</th>
                <th scope="col" style="height:40px;">Adress</th>
                <th scope="col" style="height:40px;">Update</th>
                <th scope="col" style="height:40px;">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.agentedHouses)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <th>@item.FullName</th>
                    <th>@item.Price</th>
                    <th>@item.Adrees</th>
                    <th> <a asp-controller="agentedhouse" asp-action="update" asp-route-id="@item.Id">Update</a> </th>
                    <th><a asp-controller="agentedhouse" asp-action="delete" asp-route-id="@item.Id">Delete</a></th>
                </tr>
            }
        </tbody>
    </table>
</div>      
    }
</div>


