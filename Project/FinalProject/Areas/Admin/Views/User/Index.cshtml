<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/ea89281bc3.js" crossorigin="anonymous"></script>

@model IEnumerable<AppUser>

<div style="display:flex;flex-direction:column;">
    <table class="table" style="width:500px; height:300px;">
        <thead class="table-dark">
            <tr>
                <th scope="col" style="height:40px;">Name</th>
                <th scope="col" style="height:40px;">Surname</th>
                <th scope="col" style="height:40px;">username</th>
                <th scope="col" style="height:40px;">Image</th>
                <th scope="col" style="height:40px;">Houses</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.Name</th>
                    <th>@item.Surname</th>
                    <th>@item.UserName</th>
                    <th><img src="~/Assets/Images/@item.Image" style="width:100px;height:100px;"></th>
                    <th><a asp-controller="user" asp-action="getuserhouses" asp-route-username="@item.UserName" style="text-decoration:none;padding:4px 7px;border2px solid black;">Evleri</a></th>
                </tr>
            }
        </tbody>
    </table>
</div>


